  <td colspan="2">
    <div class="row">
      {% for img in object.getImages %}
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
              <img style="width:100%; height: 200px; object-fit: cover;" src="{{img.getTwigPath}}" alt="{{img.getFilename}}"/>
              <div class="caption">
                <h3>Image nÂ°.{{img.getId}}</h3>
                <p>
                  <a href="/admin/commerson/image/{{ img.getId }}/edit" class="btn btn-primary" role="button">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  </a>
                  <a href="/admin/commerson/image/{{ img.getId }}/show" class="btn btn-default" role="button">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                  </a>
